<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

<xacro:macro name="ball_joint" params="name parent child *origin">

  <joint name="${name}_joint" type="continuous">
    <parent link="base_link"/>
    <child link="${name}_link1"/>
    <axis xyz="0 1 0" />
  </joint>

  <link name="${name}_link1">
    <inertial>
      <mass value="0.025" />
      <inertia ixx="5.8083e-4" ixy="0" ixz="0" iyy="3.0833e-5" iyz="0" izz="5.9083e-4" />
    </inertial>
  </link>

  <joint name="${name}_joint2" type="continuous">
    <parent link="${name}_link1"/>
    <child link="${name}_link2"/>
    <axis xyz="0 0 1" />
  </joint>

  <link name="${name}_link2">
    <inertial>
      <mass value="0.025" />
      <inertia ixx="5.8083e-4" ixy="0" ixz="0" iyy="3.0833e-5" iyz="0" izz="5.9083e-4" />
    </inertial>  
  </link>

  <joint name="${name}_joint3" type="continuous">
    <parent link="${name}_link1"/>
    <child link="${name}_link3"/>
    <axis xyz="1 0 0" />
  </joint>

  <link name="${name}_link3">
    <inertial>
      <mass value="0.025" />
      <inertia ixx="5.8083e-4" ixy="0" ixz="0" iyy="3.0833e-5" iyz="0" izz="5.9083e-4" />
    </inertial>  
  </link>

<joint name="${name}_jointfixed" type="fixed">
    <xacro:insert_block name="origin" />
    <parent link="${name}_link3"/>
    <child link="${child}"/>
  </joint>
</xacro:macro>

</robot>
